from re import x 


def suma(a,b):
  x= a + b
  return x

def resta(a,b):
  x = a - b
  return x

print("Dame el primer número: ")
a = int(input())
print ("Dame el segundo número: ")
b = int(input())
print("La suma de ", suma(a,b), "y la resta da", resta(a,b))    

"""
1ST CODE
"""

def multiplication (a,b):
  x = a*b
return x

def division(a,b):
  x = a/b
  return x 

print ("Give me the 1st number: ")
a = int(input())
print("Give me the 2nd number: ")
b = int(input())
print ("The multiplication is", multiplication(a,b),"and the division is", division(a,b))

